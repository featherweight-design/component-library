{
  "compilerOptions": {
    "outDir": "./lib/",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "lib": [
      "ES2015",
      "dom"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/**/*.stories.tsx"
  ]
}
